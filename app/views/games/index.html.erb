<h1>Ongoing Games</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Players</th>
      <th>Started At</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |g| %>
      <tr>
        <td><%= link_to g.name, game_path(g) %></td>
        <td></td>
        <td><%= g.created_at.strftime("%D") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/><br/>
<p><%= link_to "Add new game", {:action => 'new' } %> </p>

